@import "/home/aliaks/.config/colors/gruvbox/rofi.rasi"

* {
    background-color: @bgdark;
    rounding: 10px;
    font: "JetBrainsMonoNL NF 16";
    text-transform: bold;
}

window {
    border-radius: @rounding;
    width: 576px;
    background-color: @bg;
    border: 3px;
    height: 376px;
    border-color: @highlight;
}

mainbox {
    padding: 20px;
    background-color: @bgdark;
}

//////////////
// INPUTBAR //
//////////////

inputbar {
    margin: 0px 0px 20px;
    padding: 5px;
    border-radius: @rounding;
    font: "JetBrainsMonoNL NF 20";
    text-transform: bold;
    children: [ prompt, entry ];
    background-color: @bgdark;
}

// Text preceding the search bar
prompt {
    enabled: true;
    text-color: @text;
    vertical-align: 0.5;
    margin: 0px 10px 0px 0px; // top right bottom left
    padding: 10px;
    border-radius: @rounding;
    background-color: @highlightdark;
    font: "JetBrainsMonoNL NF 18";
    text-transform: inherit;
}

// Search bar
entry {
    placeholder: "";
    cursor-width: 2px;
    background-color: @bgdark;
    padding: 10px;
    margin: 0px;
    bottom-margin: 100px;
    text-color: @text;
    blink: false;
    border-radius: @rounding;
    text-transform: inherit;
    vertical-align: 0.5;
}

// Disabled to remove white box on search bar end
case-indicator {
    enabled: false;
}

//////////////
// LISTVIEW //
//////////////

listview {
    scrollbar: false;
    fixed-height: true;
}

// Add icons in addition to element text
element {
    orientation: horizontal;
    spacing: 20px;
    padding: 10px;
    background-color: @bgdark;
    border-radius: @rounding;
}

element-icon {
    size: 1.4em;
}

element-text {
    vertical-align: 0.5;
    text-color: #a89984;
    highlight: underline;

}

element.selected, element-text.selected, element-icon.selected {
    background-color: #3c3836;
    text-color: @text;
}

/////////////
// MESSAGE //
/////////////

textbox {
    text-color: @text;
}

///////////////////
// MODE SWITCHER //
///////////////////

mode-switcher {
    enabled: true;
}

button {
    text-color: @inactivetext;
}

button.selected {
    text-color: @text;
}
